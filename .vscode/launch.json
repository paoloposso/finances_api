{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest: tests/auth/*",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/venv/bin/pytest",  // Path to your pytest executable
            "args": [
                "-v",
                "tests"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
